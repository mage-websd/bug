    ssl:
    	key: openssl genrsa -des3 -out www.thegeekstuff.com.key 1024
    	request: openssl req -new -key www.thegeekstuff.com.key -out www.thegeekstuff.com.csr
    	singed: openssl x509 -req -days 365 -in www.thegeekstuff.com.csr -signkey www.thegeekstuff.com.key -out www.thegeekstuff.com.crt
    	a2enmod ssl
    	cp key, csr, crt to etc/ssl/
    	<VirtualHost *:443>
	    	ServerAdmin js.local
	    	ServerName js.local
	    	ServerAlias www.js.local
	    	DocumentRoot /media/server/htdocs/js
	    	SSLEngine on
		    SSLOptions +StrictRequire
		    SSLCertificateFile /etc/ssl/www.thegeekstuff.com.crt
		    SSLCertificateKeyFile /etc/ssl/www.thegeekstuff.com.key
		</VirtualHost>

