17. network
	cat /etc/sysconfig/network
		NETWORKING=yes
		HOSTNAME=soda-vm
		GATEWAY=192.168.1.254
	cat /etc/sysconfig/network-scripts/ifcfg-eth0
		DEVICE=eth0
		BOOTPROTO=static
		DHCPCLASS=
		HWADDR=00:30:48:56:A6:2E
		IPADDR=192.168.1.56
		NETMASK=255.255.255.0
		ONBOOT=yes
	cat /etc/resolv.conf
		nameserver 192.168.1.254
		nameserver 8.8.8.8
		nameserver 8.8.4.4
	service network restart
