<?php if(count($this->getItemCollection()->getItems())): ?>
    <?php $suffix = md5(microtime() . mt_rand()) ?>
    <?php $_cHelper = $this->helper('icategory'); ?>
    <?php $_storeId = Mage::app()->getStore()->getId(); ?>
    <?php $_columnCount = $this->getColumnCount() ? $this->getColumnCount() : 3; ?>
    <?php $_helper = $this->helper('catalog/output'); ?>
    <div class="box-collateral box-up-sell">
        <h3 class="upsell-title"><?php echo $this->__('You might also be in interested') ?></h3>
        <div class="upsell-container">
            <?php if (count($this->getItemCollection()->getItems()) > $_columnCount) : ?>
                <div class="bx-container-controller">
                    <span class="bx-prev bx-prev-<?php echo $suffix; ?>"></span>
                    <span class="bx-next bx-next-<?php echo $suffix; ?>"></span>
                </div>
            <?php endif; ?>
            <div class="product-list-upsell grid-column-<?php echo $_columnCount; ?>">
                <ul class="bxslider bxslider-<?php echo $suffix; ?> products-grid-slider">
                    <?php foreach ($this->getItemCollection()->getItems() as $_product): ?>
                        <?php $_product = Mage::getModel('catalog/product')->setStoreId($_storeId)->load($_product->getId()); ?>
                        <?php $_size = $_cHelper->getSize($_product, 291, 301); ?>
                        <li class="item">
                            <div class="product-image-outer"><div class="product-image-inner"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_product->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($_size->getWidth(), $_size->getHeight()) ?>" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" /></a></div></div>
                            <h3 class="product-name"><?php echo $_product->getName(); ?></h3>
                            <div class="product-rating-list">
                                <?php echo $this->getReviewsSummaryHtml($_product,'short'); ?>
                            </div>
                            <div class="product-description">
                                <?php if ($s = $_product->getShortDescription()):?>
                                    <?php echo $_helper->productAttribute($_product, $s, 'short_description') ?>
                                <?php endif; ?>
                            </div>
                            <div class="product-shop-add">
                                <?php echo $this->getPriceHtml($_product, true) ?>
                                <div class="actions">
                                    <button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                                </div>
                            </div>
                        </li>
                    <?php endforeach; ?>
                </div>
            </div>
            <script type="text/javascript">
            //<![CDATA[
            jQuery(function($) {
                $('.bxslider-<?php echo $suffix; ?>').bxSlider({
                    mode: 'horizontal',
                    speed: 500,
                    infiniteLoop: true,
                    auto: false,
                    pause: 4000,
                    moveSlides: 1,
                    slideMargin: 20,
                    slideWidth: 291,
                    minSlides: 1,
                    maxSlides: <?php echo $_columnCount; ?>,
                    nextSelector: '.bx-next-<?php echo $suffix; ?>',
                    prevSelector: '.bx-prev-<?php echo $suffix; ?>',
                    pager: false
                });
            });
            //]]>
            </script>
        </div>
    </div>
<?php endif ?>
