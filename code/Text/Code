33: minicart
	jQuery(function($) {
		$(document).on('mouseenter','.block-cart-header',function(event) {
			$('.block-minicart-content').stop(true, true).delay(200).fadeIn(600, "easeOutCubic");
			$(this).addClass('open');
		});
		$(document).on('mouseleave','.block-cart-header',function(event) {
			$('.block-minicart-content').stop(true, true).delay(200).fadeOut(600, "easeOutCubic");
			$(this).removeClass('open');
		});
	});

	//old
	jQuery(function($) {
		var openTO;
		var menu = $('#header_cart_content');
		$("#header_cart_container").hover(function() {
			if ($(this).hasClass('open')) {
				menu.stop(true, true).delay(200).fadeIn(600, "easeOutCubic");
			} else {
				clearTimeout(openTO);
				openTO = setTimeout(function() {
					$(this).addClass('open');

				}, 200);
				menu.stop(true, true).delay(200).fadeIn(600, "easeOutCubic");
			}
		}, function() {
			clearTimeout(openTO);
			menu.stop(true, true).delay(200).fadeOut(200, "easeInCubic");
			$(this).removeClass('open');
		});
	});
34: footer
	if ($('h3.ec-label').length) {
        $('h3.ec-label').append('<span class="layered-icon">+</span>');
        $('h3.ec-label').toggle(function(){
            $(this).addClass('active');
            $(this).next('div.ec-box').slideDown(400);
        },function(){
            $(this).next('div.ec-box').slideUp(400);
            $(this).removeClass('active');
        });
    }
	function qtyDown(ID) {
		var ele = $(ID);
		if (isNaN(ele.value)) {
			return false;
		}
		if (ele.value > 1) {
			ele.value --;
		}
		if (ele.value <= 1) {
			$(ID + 'button_descrease').setStyle({visibility: 'hidden'});
		}
		return false;
	}

	function qtyUp(ID) {
		var ele = $(ID);
		if (isNaN(ele.value)) {
			return false;
		}
		ele.value ++;
		if (ele.value > 1) {
			$(ID + 'button_descrease').setStyle({visibility: 'visible'});
		}
		return false;
	}

	function qtyAddCart(URL, ID) {
		var ele = $(ID);
		if (URL.indexOf('&') >= 0 || URL.indexOf('?') >= 0) {
			return setLocation(URL +'&qty='+ ele.value);
		}
		return setLocation(URL +'?qty='+ ele.value);
	}
