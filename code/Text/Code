26: insert customer form attribute
    <?php
$resource = Mage::getModel('core/resource');
$write = $resource->getConnection('core_write');
$read = $resource->getConnection('core_read');
$table = $resource->getTableName('customer/form_attribute');
$attributeCodes = array(
    race,
    mobile,
    occupation,
    business,
    hobbies,
    pregnant,
    married,
    outdoor,
    is_vendor,
    dream_event,
    special_item,
    avatar,
    website,
    facebook,
    instagram,
);
foreach($attributeCodes as $attributeCode) {
    $attribute = Mage::getSingleton('customer/customer')->getResource()->getAttribute($attributeCode);
    $attributeId = $attribute->getData('attribute_id');
    $result = $read->fetchAll("SELECT * FROM {$table} WHERE attribute_id='{$attributeId}' AND form_code='customer_account_edit'");
    if(!$result || !count($result)) {
        $write->query("INSERT INTO `{$table}` (`form_code`,`attribute_id`) VALUES ('customer_account_edit','{$attributeId}')");
    }
}
?>

