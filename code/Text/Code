Breadcrumb category
    <?php
                $_category = Mage::registry('current_category');
                if($_category) {
                    $path = $_category->getPath();
                    $_categoryIds = explode('/', $path);
                    unset($_categoryIds[0]);
                    unset($_categoryIds[1]);
                }
                else{
                    $_categoryIds = $_product->getCategoryIds();
                    if($_categoryIds) {
                        $_categoryIds = $_categoryIds[0];
                        $_category = Mage::getModel('catalog/category')->load($_categoryIds);
                        $path = $_category->getPath();
                        $_categoryIds = explode('/', $path);
                        unset($_categoryIds[0]);
                        unset($_categoryIds[1]);
                    }
                }
                if($_categoryIds && count($_categoryIds)) {
                    $_categories = Mage::getModel('catalog/category')->getCollection()
                        ->addAttributeToFilter('entity_id',array('in'=>$_categoryIds))
                        ->addAttributeToSelect('name')
                        ->addAttributeToSelect('url');?>
                    <div class="product-breadcrumb">
                        <ul>
                            <?php foreach ($_categories as $_category): ?>
                                <li>
                                    <a href="<?php echo $_category->getUrl(); ?>"><?php echo $_category->getName(); ?></a>
                                </li>
                            <?php endforeach; ?>
                        </ul>
                    </div>
                <?php } ?>
